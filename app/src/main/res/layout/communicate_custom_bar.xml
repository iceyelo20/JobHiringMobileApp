<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/custom_profile_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/profile"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:cropToPadding="true"
        />

    <TextView
        android:id="@+id/custom_profile_name"
        android:layout_width="match_parent"
        android:layout_toStartOf="@+id/communicate_audio_call"
        android:text="Display Full Name"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginTop="4dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/custom_profile_image"
        android:layout_marginStart="10dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/custom_user_last_seen"
        android:layout_width="match_parent"
        android:text="last seen"
        android:layout_below="@+id/custom_profile_name"
        android:layout_toStartOf="@+id/communicate_audio_call"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_toEndOf="@id/custom_profile_image"
        android:layout_marginStart="10dp"
        android:layout_height="wrap_content"/>

    <ImageButton
        android:id="@+id/communicate_video_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_video"
        android:layout_marginEnd="5dp"
        android:layout_alignParentEnd="true"/>
    <ImageButton
        android:id="@+id/communicate_audio_call"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_audio"
        android:layout_toStartOf="@id/communicate_video_call"/>

</RelativeLayout>