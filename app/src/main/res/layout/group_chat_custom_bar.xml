<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/custom_group_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/group_icon"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/custom_group_name"
        android:layout_width="wrap_content"
        android:layout_toEndOf="@id/custom_group_image"
        android:layout_marginStart="10dp"
        android:text="Display Group Name"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_centerVertical="true"
        android:layout_marginTop="4dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/custom_group_add_participant"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_add_participant_icon"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toStartOf="@+id/group_options"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/group_options"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:src="@drawable/ic_menu"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        />


</RelativeLayout>