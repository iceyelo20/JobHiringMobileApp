<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/group_message_profile_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:src="@drawable/profile"/>

    <TextView
        android:id="@+id/group_user_full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/group_message_profile_image"
        android:text="Sender Full Name"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/group_receiver_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_below="@id/group_user_full_name"
        android:layout_toEndOf="@+id/group_message_profile_image"
        android:layout_marginLeft="3dp"
        android:background="@drawable/receiver_message_text_background"
        android:text="Receiver Message"
        android:textColor="@color/white"
        android:padding="10dp"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/group_user_you"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/group_user_full_name"
        android:text="You"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/group_sender_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/group_receiver_message_text"
        android:layout_marginTop="2dp"
        android:layout_alignParentTop="@+id/group_receiver_message_text"
        android:background="@drawable/sender_message_text_background"
        android:text="Receiver Message"
        android:textColor="@color/white"
        android:layout_marginRight="3dp"
        android:padding="10dp"
        android:textSize="14sp"
        android:textStyle="bold" />

</RelativeLayout>